<Page x:Class="TcpChat1.ConnectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TcpChat1"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConnectPage">

    <Grid>
        <Label Content="Waiting for your friend to connect" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFBFBFBF" FontSize="24" Margin="202,142,0,0"/>
        <Image gif:ImageBehavior.AnimatedSource="/Tcp Chat;component/Resources/loading.gif" Margin="308,213,346,155" RenderTransformOrigin="0.5,0.5" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Page>
